@page
@model CheckoutWithPaystack.Pages.ProductModel
@{
    ViewData["Title"] = "Product Page";
}

<section class="container px-0 p-md-5">
    <section class="row justify-content-between justify-content-md-around px-0 gap-4 gap-md-0 py-md-3 mx-0">
        <section class="col-12 col-md-5 col-lg-4 d-flex flex-column px-0 align-self-md-center align-self-lg-top">
            <img class="img-fluid rounded-4 d-none d-md-block" src="images/image-product-1.jpg" alt="hero-img">
            <section class="row d-none d-md-flex pt-4">
                <div class="col-3"><img class="rounded-3 img-fluid" src="images/image-product-1-thumbnail.jpg" alt=""></div>

                <div class="col-3"><img class="rounded-3 img-fluid" src="images/image-product-2-thumbnail.jpg" alt=""></div>

                <div class="col-3"><img class="rounded-3 img-fluid" src="images/image-product-3-thumbnail.jpg" alt=""></div>

                <div class="col-3"><img class="rounded-3 img-fluid" src="images/image-product-4-thumbnail.jpg" alt=""></div>
            </section>

            <div id="demo" class="carousel slide d-block d-md-none" data-bs-ride="true">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class=" img-fluid" src="images/image-product-1.jpg" alt="hero-img">
                    </div>
                    <div class="carousel-item ">
                        <img src="images/image-product-2.jpg" alt="" class="d-block img-fluid">
                    </div>
                    <div class="carousel-item">
                        <img src="images/image-product-3.jpg" alt="" class="d-block img-fluid">
                    </div>
                    <div class="carousel-item">
                        <img src="images/image-product-4.jpg" alt="" class="d-block img-fluid">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" title="btn" data-bs-target="#demo" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </button>
                <button class="carousel-control-next" type="button" title="btn" data-bs-target="#demo" data-bs-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </button>
            </div>
        </section>
        <section class="col-12 col-md-7 col-lg-6 align-self-center px-4 d-flex flex-column justify-content-between">
            <h6 class="text-warning">SNEAKER COMPANY</h6>
            <h1 class="fs-1 fw-bolder col-10 col-md-12">Fall Limited Edition Sneakers</h1>
            <p class="text-secondary pt-3 pb-2">
                These low-profile sneakers are your perfect casual wear companion.
                Featuring a durable rubber outer sole,they'll withstand everything the weather can offer.
            </p>

            <div class="row mb-3">
                <div class="col-5 col-md-auto">
                    <p class="fw-bolder fs-3 mb-md-0">$125.00</p>
                </div>
                <div class="col-auto col-auto align-self-center ps-md-0">
                    <p class="fs-6 mb-md-0 px-md-2 rounded-1" style="color: #fd7e14; background-color: rgba(248, 226, 218, 0.973);">50%</p>
                </div>
                <div class="col-4 col-md-12 align-self-center flex-fill">
                    <p class="text-muted fs-6 d-flex justify-content-end justify-content-md-start"><s>$250.00</s></p>
                </div>
            </div>

            <div class="d-flex flex-column flex-md-row justify-content-between mt-md-3">
                <div class="btn-group col-md-6 col-lg-4 mb-4 mb-md-0" role="group" aria-label="Basic example">
                    <button type="button" title="btn" class="btn btn-light fw-bolder d-flex justify-content-start">
                        <i class="bi bi-dash text-warning fs-4 fw-bolder"></i>
                    </button>
                    <button type="button" title="btn" class="btn btn-light fw-bolder fs-4" id="btn-cart-value">0</button>
                    <button type="button" title="btn" class="btn btn-light fw-bolder d-flex justify-content-end">
                        <i class="bi bi-plus text-warning fs-4 fw-bolder"></i>
                    </button>
                </div>

                <button type="button" title="btn" class="btn col-12 col-md-7 col-lg-7 mb-5 mb-md-0 text-light py-2 py-md-0
                         fw-bolder select-btn" style="background-color: #fd7e14;">
                    <i class="bi bi-cart3 pe-2 fs-5 fw-bolder"></i>Add to cart
                </button>
            </div>

        </section>
    </section>
</section>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog mt-5 shadow">
        <div class="modal-content p-3">
            <div class="modal-header">
                <h5 class="modal-title fw-bold" id="exampleModalLabel">Cart</h5>
            </div>

            <div class="modal-body text-center py-4">
                <section class="d-flex flex-column">
                    <div class="d-flex gap-3 mb-4 justify-content-between">
                        <img src="images/image-product-1-thumbnail.jpg" class="img-fluid rounded-2 align-self-center"
                             style="height: 3rem;" alt="">
                        <div class="d-flex flex-column align-items-center">
                            <p class="text-muted mb-0 fs-5">Autumn Limited Edition...</p>
                            <p class="align-self-start mb-0 fs-4 text-muted"> $125.00 × 3 <span class="fw-bolder">$375.00</span></p>
                        </div>
                        <i class="bi bi-trash align-self-center text-muted fs-3"></i>
                    </div>
                    <button type="button" title="btn" class="btn text-light fw-bold py-3 rounded-4"
                            style="background-color: #fd7e14;">
                        Checkout
                    </button>
                </section>
            </div>
        </div>
    </div>
</div>
